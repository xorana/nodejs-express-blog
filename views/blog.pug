doctype html
html
    head
        title Blog
        link(rel='stylesheet', href='/static/css/blog.css')
        link(rel='icon', href='/static/favicon.ico')
        meta(name='viewport', content='width=device-width, initial-scale=1.0, maximum-scale=1')
    body
        .navbar
            nav
                .left
                    a(href='/') jacobsalway.com
                .right
                    a(href='/blog') Blog
                    a Portfolio
        .content
            if posts.length > 0
                each post in posts
                    .post
                        h1
                            a(href=`/blog/${post.id}`)= post.title
                        .post-meta
                            span= "Posted on " + post.time
                        .post-content
                            each line in post.content
                                p= line
                        .post-read-more
                            a(href=`/blog/${post.id}`) Read more â†’
            else
                span No blog content yet.