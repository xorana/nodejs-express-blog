{
  "name": "nodejs-express-blog",
  "version": "1.0.0",
  "description": "",
  "main": "dist/app.js",
  "scripts": {
    "build": "npm run build-scss && npm run build-ts && npm run lint",
    "build-scss": "node-sass scss -o public/css",
    "build-ts": "tsc",
    "clean": "rimraf dist/*",
    "lint": "eslint . --ext .ts",
    "serve": "node dist/app.js",
    "start": "npm run serve",
    "test": "echo Test would go here",
    "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-scss\" \"npm run watch-ts\" \"npm run watch-node\"",
    "watch-scss": "node-sass --watch scss -o public/css",
    "watch-node": "nodemon dist/app.js",
    "watch-ts": "tsc -w --preserveWatchOutput"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xorana/nodejs-express-blog.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xorana/nodejs-express-blog/issues"
  },
  "homepage": "https://github.com/xorana/nodejs-express-blog#readme",
  "dependencies": {
    "compression": "^1.7.4",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "lorem-ipsum": "^2.0.3",
    "mongoose": "^5.11.9",
    "pug": "^2.0.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.9",
    "@types/node": "^12.19.11",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "concurrently": "^5.3.0",
    "eslint": "^6.8.0",
    "node-sass": "^4.14.1",
    "nodemon": "^1.19.4",
    "npm-run-all": "^4.1.5",
    "tslint": "^5.20.1",
    "typescript": "^3.9.7"
  }
}
